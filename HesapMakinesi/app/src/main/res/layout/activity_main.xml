            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="5dp"
            android:textAlignment="textEnd"
            android:textSize="35sp"
            android:textColor="@color/white"
            tools:text="7"></TextView>

